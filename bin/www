#!/usr/bin/env node

const fs  = require('fs');
const app = require('../app');

if(typeof app.locals === 'undefined') return;

let server, port;

if(app.locals.protocol === 'https') {

	if (fs.existsSync('./keys/privkey.pem')) {

		const https       = require('https');
		const privateKey  = fs.readFileSync('./keys/privkey.pem', 'utf8');
		const certificate = fs.readFileSync('./keys/fullchain.pem', 'utf8');
		const credentials = { key: privateKey, cert: certificate };

		server = https.createServer(credentials, app);

	} else {

		console.log();
		console.log('  ERROR ! File privkey.pem not available in folder /keys');
		console.log('        ! Server will be started using http instead of https');
		console.log();

		const http = require('http');

		server = http.createServer(app);

	}

} else {

	const http = require('http');
	server = http.createServer(app);

}

app.set('port', app.locals.port);


server.listen(app.locals.port);
server.on('error', onError);
server.on('listening', onListening);


if(!fs.existsSync('storage'      )) fs.mkdirSync('storage'      );
if(!fs.existsSync('storage/cache')) fs.mkdirSync('storage/cache');


/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
	if (error.syscall !== 'listen') {
		throw error;
	}

	var bind = typeof port === 'string'
		? 'Pipe ' + port
		: 'Port ' + port;

	// handle specific listen errors with friendly messages
	switch (error.code) {
		case 'EACCES':
			console.error(bind + ' requires elevated privileges');
			process.exit(1);
			break;
		case 'EADDRINUSE':
			console.error(bind + ' is already in use');
			process.exit(1);
			break;
		default:
			throw error;
	}
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {

	let addr = server.address();
	let bind = typeof addr === 'string'
	? 'pipe ' + addr
	: 'port ' + addr.port;

	console.log();
	console.log('  >> Using PLM Tenant         ' + app.locals.tenant);
	console.log('  >> Using Client ID          ' + app.locals.clientId.substring(0, 8) + '...');
	console.log('  >> Using redirect Uri       ' + app.locals.redirectUri);
	console.log('  >> Using settings file      ' + app.locals.settings);
	console.log('  >> Using Default Theme      ' + app.locals.defaultTheme);
	console.log('  >> Cache Enabled?           ' + app.locals.enableCache);
	console.log('  >> Debug Mode Enabled?      ' + app.locals.debugMode);
	console.log('  >> Listening on             ' + bind);

	if((app.locals.adminClientId === '') || (app.locals.adminClientSecret === '')) {
		console.log();	
		console.log('  The USER SETTINGS MANAGER cannot be used as Admin Client ID/Secret is missing');
	} else {
		console.log('  >> Using Admin Client ID    ' + app.locals.adminClientId.substring(0, 8) + '...');
	}

	if((app.locals.vaultGateway === '') || (app.locals.vaultGateway === '')) {
		console.log();
		console.log('  Not connected to Vault as Vault Gateway and/or Vault Name are not defined');
	} else {
		console.log('  >> Using Vault Gateway      ' + app.locals.vaultGateway);
		console.log('  >> Using Vault Name         ' + app.locals.vaultName);
	}

	if(typeof app.locals.chrome === 'undefined') {
		console.log();
		console.log('  !! The CHROME EXTENSION cannot be used as exports.chrome does not exist in settings');
	}

	console.log();
	console.log();
	console.log('  REMINDERS');
	console.log(' --------------------------------------------------------------------------------------------------');
	console.log('  Since the release of July 2024, the UX server uses PKCE for authentication instead of the');
	console.log('  former mechanism involving the Client Secret. This requries an APS application of type');
	console.log('  "Desktop, Mobile, Single-Page App" for successful authentication.');
	console.log('  ');
	console.log('  If not done so yet, create such an app at aps.autodesk.com and provide the given ');
	console.log('  Client ID in file environments.js. This app must use a callback URL that end with "/callback"');
	console.log('  (i.e. http://localhost:8080/callback).');
	console.log('  ');
	console.log('  If your login to the UX solutions fails with an error code 401, you most likely are');
	console.log('  using an APS of wrong type or with wrong callback URL.')
	console.log();
	console.log();

}